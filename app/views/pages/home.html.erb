       <div class="background_element1"></div>
   </div> -->
</div>

<%= content_for :after_js do %>
 <script>
    $(document).ready(function() {
      $('#date_there').datepicker({
        todayHighlight: true,
        orientation: "bottom-left",
        autoclose: true,
        format: 'yyyy-mm-dd',
      });
      $('#date_back').datepicker({
        todayHighlight: true,
        orientation: "bottom-left",
        autoclose: true,
        format: 'yyyy-mm-dd',
      }).on("show", function(e) {
          var thereDate = $("#date_there").datepicker("getDate");
          var backDate = $("#date_back").datepicker("getDate");

          if (backDate == null) {
            $('#date_back').datepicker('update', thereDate);
          }
      });
    });
  </script>
<% end %>
